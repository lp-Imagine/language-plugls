{
    "manifest_version": 2,
    "name": "翻译Plugins",
    "description": "translate",
    "version": "0.0.1",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": [
            "js/jquery.js",
            "js/background.js"   
        ],
        "persistant": false 
    },
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "js": [
            "js/options.js"
        ],
        "run_at": "document_end"
    }],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}